<!DOCTYPE html>
<html>
  <head>
    <title>Newsletter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('favicon/newsletter.png') %>
  </head>

  <body class="bg-light">
    <div class="container mt-5">
      <%= yield %>
    </div>
    <%if flash %>
      <% flash.each do |key, value| %>
        <script>
          $.notify({
              // options
              message: '<%= value %>' 
            },{
              // settings
              type: 'danger',
              spacing: 10,
            });
        </script>
      <% end %>
    <% end %>
  </body>
</html>
